{% extends 'base.html.twig' %}

{% block title %}Collaborateur Management{% endblock %}

{% block body %}

    {% if is_granted('ROLE_ADMIN') %}
        <h1>GESTION DES COLLABORATEURS</h1>
        <h2>Renseigner les modifications</h2>
    {% else %}
        <h1>MODIFIER VOS DONNÉES PERSONNELLES</h1>
    {% endif %}

    <div class="border-top border-bottom mt-5 mb-5">
        {{ form_start(modifCollaborateurForm) }}
        <div class="mt-3 mb-3 d-flex">
            <label class="w-100">Nom{{ form_row(modifCollaborateurForm.nom) }}</label>
            <label class="w-100">Prenom{{ form_row(modifCollaborateurForm.prenom) }}</label>
            <label class="w-100">Téléphone{{ form_row(modifCollaborateurForm.telephone) }}</label>
        </div>
        <div class="mt-3 mb-3 d-flex">
            <label class="w-100">Adresse {{ form_row(modifCollaborateurForm.adresse) }}</label>
            <label class="w-100">Code Postal {{ form_row(modifCollaborateurForm.cp) }}</label>
            <label class="w-100">Ville{{ form_row(modifCollaborateurForm.ville) }}</label>
        </div>
        {% if is_granted('ROLE_ADMIN') %}
            <div class="mt-3 mb-3 d-flex">
                <label class="w-100">Etat{{ form_row(modifCollaborateurForm.etat) }}</label>
                <label class="w-100">Profil{{ form_row(modifCollaborateurForm.profil) }}</label>
                <label class="w-100">{{ form_row(modifCollaborateurForm.roles) }}</label>
            </div>
        {% endif %}
        {% if is_granted('ROLE_ADMIN') %}
            <div class="mt-3 mb-3 d-flex justify-content-center">
                <label class="text-center w-50">Email {{ form_row(modifCollaborateurForm.email) }}</label>
            </div>
        {% endif %}
        {% if is_granted('ROLE_ADMIN') %}
            <div class="mt-3 mb-3">
                <label class="d-flex justify-content-center w-100">{{ form_row(modifCollaborateurForm.password) }}</label>
            </div>
        {% endif %}
        <button class="d-flex ms-auto btn btn-primary btn-sm mb-3">Modifier</button>
        {{ form_end(modifCollaborateurForm) }}
    </div>
    {% if is_granted('ROLE_ADMIN') %}
        <a class="text-decoration-none" href= {{ path('manageCollaborateur')  }}>
            <button class="btn-sm btn btn-secondary">Annuler</button>
        </a>
    {% else %}
        <a class="text-decoration-none" href= {{ path('singleProfilMissions', {idProfil:currentIdProfil, idUser:currentId})  }}>
            <button class="btn-sm btn btn-secondary">Annuler</button>
        </a>
    {% endif %}
{% endblock %}