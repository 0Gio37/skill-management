{% extends 'base.html.twig' %}

{% block title %}List Category{% endblock %}

{% block body %}

    <h1>GESTION DES CATEGORIES</h1>

    <div class="border-top border-bottom my-5">
        {{ form_start(formNewCat) }}
        <div class="d-flex justify-content-evenly py-5">
            <div>{{ form_row(formNewCat.nom) }}</div>
            <div><button class="d-flex ms-auto btn btn-primary btn-sm mb-3">Ajouter une Cat√©gorie</button></div>
        </div>
        {{ form_end(formNewCat) }}
    </div>

    {% for cat in categoryList %}
        <div class="container border-bottom py-3 px-5">
            <div class="row">
                <div class="col-9">
                    {{ cat.nom | upper }}
                </div>
                <div class="col text-start">
                    <a class="text-decoration-none" href= {{  path('modifCategory', {idUser : cat.id})   }}>
                        <button class="d-flex me-auto btn-sm btn btn-outline-primary">Modifier</button>
                    </a>
                </div>
                <div class="col text-center">
                    <button class="d-flex ms-auto btn btn-sm">
                        <a class="text-danger" href= {{ path('suppCategory', {idUser : cat.id})  }}>Supprimer</a>
                    </button>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}
