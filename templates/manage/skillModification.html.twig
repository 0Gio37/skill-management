{% extends 'base.html.twig' %}

{% block title %}Skills Management{% endblock %}

{% block body %}

    <h1>GESTION DES COMPETENCES</h1>

    <h2>Renseigner la ou les nouvelles valeurs</h2>

    <div class="border-top border-bottom my-5">
        {{ form_start(modifSkillForm) }}
        <div class="d-flex justify-content-evenly py-5">
            <div>{{ form_row(modifSkillForm.nom) }}</div>
            <div>{{ form_row(modifSkillForm.category) }}</div>
            <div><button class="btn btn-primary">Modifier</button></div>
        </div>
        {{ form_end(modifSkillForm) }}
    </div>

    <a class="text-decoration-none" href= {{ path('manageSkill')  }}>
        <button class="btn-sm btn btn-secondary">Annuler</button>
    </a>

{% endblock %}