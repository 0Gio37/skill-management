{% extends 'base.html.twig' %}

{% block title %}List Company{% endblock %}

{% block body %}

    <h1>GESTION DES ENTREPRISES</h1>

    <div class="border-top border-bottom my-5">
        {{ form_start(formNewComp) }}
        <div class="d-flex justify-content-evenly py-5">
            <div>{{ form_row(formNewComp.nom) }}</div>
            <div>{{ form_row(formNewComp.lieu) }}</div>
            <div><button class="btn btn-primary">Ajouter une entreprise</button></div>
        </div>
        {{ form_end(formNewComp) }}
    </div>

    {% for comp in  companyList %}
        <div class="container border-bottom py-3 px-5">
            <div class="row">
                <div class="col-4">
                    {{ comp.nom | upper }}
                </div>
                <div class="col-4">
                    {{ comp.lieu }}
                </div>
                <div class="col text-start">
                    <a class="text-decoration-none" href= {{ path('modifCompany', {idUser : comp.id})  }}>
                        <button class="d-flex me-auto btn-sm btn btn-outline-primary">Modifier</button>
                    </a>
                </div>
                <div class="col text-center">
                    <button class="d-flex ms-auto btn btn-sm">
                        <a class="text-danger" href= {{ path('suppCompany', {idUser : comp.id})  }}>Supprimer</a>
                    </button>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}
